{% extends "base.html" %}{% block content %}
<div class="container">
    <div class="page-header">
        <h1>Upload frog images for Frog ID {{frog.frogid|escape}}</h1>
    </div>

    <div class="row col-md-6">
        <div class="well">
            <form action="/frogs/upload" method="POST" enctype="multipart/form-data" data-ajax="false">
                {% csrf_token %}
                <input id="id" type="hidden" value="{{ frog._id }}" name="id"/>
                <div class="control-group">
                    <label for="dorsalimage">Upload Dorsal Image</label>
                    <div class="controls">
                        <input id="dorsalimage" type="file" name="dorsalimage"/>
                    </div>
                </div>
                <div class="control-group">
                    <label for="ventralimage">Upload Ventral Image</label>
                    <div class="controls">
                        <input id="ventralimage" type="file" name="ventralimage"/>
                    </div>
                </div>
                <input id="submit" type="submit" value="Upload Images"/>
            </form>
        </div>
    </div>
    {% endblock %}